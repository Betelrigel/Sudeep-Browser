{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    // REMOVE the explicit /static/ route
    // {
    //   "src": "/static/(.*)",
    //   "dest": "/static/$1"
    // },
    {
      "src": "/templates/(.*)",
      "dest": "/templates/$1"
    },
    {
      "src": "/(.*)", // This catch-all will now also handle /static/ requests
      "dest": "api/index.py"
    }
  ]
}